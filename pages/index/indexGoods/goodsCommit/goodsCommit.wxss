page {  
  display: block;  
  min-height: 100%;  
  background-color: #efeff4;  
}  
.goodTop{
  width: 95%;
  height: 180rpx; 
  padding-left:5%; 
  border-bottom: 20rpx solid #e4e4e4;
  margin-left: auto;
  margin-right: auto; 
  background-color: #ffffff;
}
.image{
  float: left;
  width: 120rpx;
  height: 120rpx;
  border: 2rpx solid #e4e4e4;
  margin-top: 30rpx;
}
.goodTop image{
  width: 120rpx;
  height: 120rpx;
}
.bigimg{
  position:fixed;
  top:0rpx;
  height:100%;
  width:100%;
  opacity:0.3;
  background-color:#000;
  /* border: 2rpx solid #ffffff; */
}
.bigimg_{
  position:fixed;
  width: 100%;
  height: 50%;
  top: 200rpx;
  border: 2rpx solid #EB9413;
}
.goodName{
  float: left;
  width: 400rpx;
  /* height: 120rpx; */
  margin-top: 37rpx;
  margin-left: 21rpx;
  /* border: 2rpx solid #000;  */
}
.goodName text{
  float: left;
  width: 100%;
  font-weight: bold;
  font-size: 30rpx;
}
.goodMoney{
  float: left;
  height: 110rpx;
  margin-left: 7%;
  text-align: center;
  font-size: 24rpx;
  color: #FD9C04;
  margin-top: 100rpx;
}
.countBtn{
  width: 48rpx;
  height: 48rpx;
  border: 3rpx solid #acacac;
  border-radius: 15%;
  text-align: center;
  font-size: 35rpx;
  color: #acacac;
  line-height: 48rpx;
}
.underTop{
  width: 100%; 
  /* margin-left: auto;
  margin-right: auto; */
  /* padding-left: 5%;  */
  height: 86rpx;
  border-bottom: 4rpx solid #e4e4e4;
  background-color: #ffffff;
}
.left{
  float:left; 
  width: 60%; 
  height: 53rpx;
  font-size: 30rpx;
  margin-top: 27rpx;
  margin-left: 30rpx; 
}
.right{
  float: right; 
  width: 30%; 
  height: 53rpx;
  font-size: 30rpx;
  margin-top: 27rpx;
  margin-right: 30rpx;
}
.right text{
  float: right;
}
.hotelBottom{
  position: fixed;
  bottom: 0rpx;
  border: 2rpx solid #e4e4e4;
  height: 55px;
  width: 100%;
}
.totalMoney{
  float: left;
  width: 50%;
  height: 55px;
  text-align: center;
  background-color: #ffffff;
  font-size: 30rpx;
  color: #eb9413;
  line-height: 55px;
}
.commit{
  float: right;
  width: 50%;
  height: 55px;
  text-align: center;
  font-size: 30rpx;
  color: #ffffff;
  background-color: #eb9413;
  line-height: 55px;
}