<!--index.wxml-->
<view class='contain'>
  <view class='header'>
    <view class='location'><image src='{{iconLocation}}' style='width: 25rpx;height: 36rpx;'></image><text>{{address}}</text></view>
    <view class='searchs'>
     <button class='searchButton' catchtap="switch" style='background-image: url({{searchIcon}})'>搜索</button> 
    </view>
  </view>
  <view class='content'>
    <swiper indicator-dots="{{indicatorDots}}"  
            autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}">  
          <block wx:for="{{imgUrls}}" wx:key='unquine'>  
            <swiper-item>  
               <navigator url="{{item.link}}" hover-class="navigator-hover">  
                <image src="{{item.url}}" class="slide-image" style='height:200px'/>  
               </navigator>   
            </swiper-item>  
          </block>  
    </swiper>  
  </view>
  <view class='list'>
  <!-- wx并不允许把图片的url写入到wxss中，所以要写到wxml -->
     <button class='villa' catchtap='tohotelLists' id='1' style='background-image: url({{shanZhuang}});background-size:100% 100%;'>山庄</button>
     <button class='villa' catchtap='tohotelLists' id='2' style='background-image: url({{minSu}});background-size:100% 100%;'>民宿</button>
     <button class='villa' catchtap='tohotelLists' id='0' style='background-image: url({{jiuDian}});background-size:100% 100%;'>酒店</button>
     <button class='villa' catchtap='tohotelLists' id='3' style='background-image: url({{jiuFang}});background-size:100% 100%;'>酒坊</button>
  </view>
  <view class='footer'>
    <view class='listPart' wx:for='{{goodDatas}}' wx:key="dvjkbfea" wx:for-item="item">
      <navigator url='{{item.link}}'>
       <view class='classify'>
         <image src='{{item.img}}'></image>
       </view>
       <view class='listCon'>
          <text class='listText'>{{item.name}}</text>
       </view>
      </navigator>     
    </view>
    <view class='listPart' catchtap='toGoodsMore'>
       <view class='classify'>
         <image src='../../img/hotel.jpg'></image>
       </view>
       <view class='listCon'>
          <text class='listText'>更多</text>
       </view>     
    </view>
  </view>
</view>