<!--pages/index/indexContent/hotelCommit/hotelCommit.wxml-->
<view class='hotelTop'>
  <view class='hotelName'>
    <text>{{hotelName}}</text>
  </view>
  <view class='hotelMoney'>¥{{hotelMoney}}元</view>
  <view class='hotelDate'>
    <view class='dateIn'>入住日期：{{dateIn}}</view>
    <view class='dateOut'>离店日期：{{dateOut}}</view>
  </view>
</view>
<view class='underTop'>
  <view class='left'>
    <text>订房品种</text>
  </view>
  <view class='right'>
    <text>{{hotelType}}</text>
  </view>
</view>
<view class='underTop'>
  <view class='left'>
    <text>房间数量</text>
  </view>
  <view class='right'>
    <view style='width:60%;float:left;margin-left:15%;'>
       <view style='width:20%;float:left;'><button size='mini' catchtap='changeRoom' id='1'>+</button> </view> 
      <view style='width:30%;float:left;margin-left:20%;text-align:center;padding-top:4rpx;'> {{roomCount}} </view>
       <view style='width:20%;float:left;'><button size='mini' catchtap='changeRoom' id='0'>-</button></view> 
    </view>
  </view>
</view>
<view class='underTop'>
  <view class='left'>
    <text>入住人姓名</text>
  </view>
  <view class='right'>
    <text>{{userName}}</text>
  </view>
</view>
<view class='underTop'>
  <view class='left'>
    <text>手机号</text>
  </view>
  <view class='right'>
    <text>{{phoneNumber}}</text>
  </view>
</view>
<view class='left' style='margin-left:2.5%;'>
  选择优惠券
</view>
<view class='hotelBottom'>
  <view class='totalMoney'>总额：{{total}}元</view>
  <view class='commit'>提交订单</view>
</view>
