<view class='hotelTop'>
  <view class='image'>
    <image src='{{imgSrc}}'></image>
  </view>
   <view class='hotelName'>
    <text>{{hotelName}}</text>
  </view>
  <view class='dateIn'>入住日期：{{dateIn}} </view>
  <view class='dateOut'> 离店日期：{{dateOut}}</view>
  <view class='hotelMoney'>¥ <text style='font-size: 36rpx;color: #FD9C04;font-weight:bold'>{{hotelMoney}}</text></view>  
</view>
<view class='underTop'>
  <view class='left'>
    <text>订房品种</text>
  </view>
  <view class='right'>
    <text>{{hotelType}}</text>
  </view>
</view>
