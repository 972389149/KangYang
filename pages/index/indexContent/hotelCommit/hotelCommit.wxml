<view class='underTop'>
  <view class='left'>
    <text>入住人姓名</text>
  </view>
  <view class='right'>
    <!-- <text>{{userName}}</text> -->
    <input placeholder='输入姓名' type='text' confirm-type='done' maxlength='8'></input>
  </view>
</view>
<view class='underTop'>
  <view class='left'>
    <text>手机号</text>
  </view>
  <view class='right'>
    <!-- <text>{{phoneNumber}}</text> -->
    <input placeholder='输入手机号' type='number' confirm-type='done' maxlength='11'></input>
  </view>
</view>
<view class='underTop' style='border-bottom: none'>
  <view class='left'>
    选择优惠券
  </view>
</view>
<view class='hotelBottom'>
  <view class='totalMoney'>总额 ： <text style='font-size: 24rpx;'>¥  </text><text style='font-size: 48rpx;'>{{total}}</text></view>
  <view class='commit' catchtap='submitOrder'>提交订单</view>
</view>
