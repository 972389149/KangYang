<!--pages/index/indexGoods/hotelDetail/hotelDetail.wxml-->
<view style="{{flag?'':'position:fixed;width:100%;height:100%;'}}">
    <view class='header'> 
      <swiper indicator-dots="{{indicatorDots}}"  
              autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}">  
            <block wx:for="{{imgUrls}}" wx:key='unquine'>  
              <swiper-item>  
                  <image src="{{item}}" class="slide-image" style='height:200px'/>    
              </swiper-item>  
            </block>  
      </swiper>  
    </view>
    <view style='width:100%'>
      <view class='content_price'>
          <view class='content_left'>
            <text class='grade'>4.8</text>
            <text decode="{{true}}" class='good'>分&nbsp;很好</text>
          </view>
          <view class='content_right' bindtap='modalcnt'>
            <text class='eval'>1252条评论</text>
            <image src='https://www.holyhire.cn/ky/img/icon/to.png' class='to'></image>
          </view>
      </view>
      <view style='border-bottom: 1px solid rgb(216, 216, 216)'></view> 
      <view class='content_intruduce'>
        <view>
            <text class='hotelName'>{{name}}</text>
        </view>
        <view class='hotel_deta'>
            <text class='hotelIntro'>{{intro}}</text>
            <text class='hotel_distance'>距我1.1km</text>
        </view>
      </view>   
      <view style='height:13px;background:#f7f8f8'></view>  
      <view class='content_time'>
        <view class='time_in'>
          <text class='time_a'>入住</text>
          <text class='time_b'>11月20号</text>
          <text class='time_c'>今天</text>
          <text decode="{{true}}" class='time_d'>&nbsp;|&nbsp;</text>
        </view>
        <view class='time_out'>
          <text class='time_a'>离店</text>
          <text>11月22号</text>
          <text class='time_c'>后天</text>
        </view>
        <view class='time_total'>
          <text decode="{{true}}">共2晚></text>
          <image></image>
        </view>
      </view>
      <view style='height:13px;background:#f7f8f8'></view>  

      <view>
        <view class='room'>
          <view>
            <view>
              <text class='room_title'>优惠特价房</text>
            </view>
            <view>
              <view class='room_left'>
                    <view>
                        <text class='room_kind' decode="{{true}}">双床&nbsp;|&nbsp;无窗&nbsp;|&nbsp;不含早餐    
                        </text>
                    </view>
                  <view style='margin-top:20px;'>
                    <text class='price_old'>￥170</text>
                    <text class='price_new'>￥140</text>
                  </view>
              </view>
              <view class='room_right'>
                <navigator url='../hotelCommit/hotelCommit'><button>预定</button></navigator>
              </view>
            </view>
          </view>
        </view>
        <view style='border-bottom: 1px solid rgb(216, 216, 216)'></view> 
      </view>
      <view>
        <view class='room'>
          <view>
            <view>
              <text class='room_title'>优惠特价房</text>
            </view>
            <view>
              <view class='room_left'>
                    <view>
                        <text class='room_kind' decode="{{true}}">双床&nbsp;|&nbsp;无窗&nbsp;|&nbsp;不含早餐    
                        </text>
                    </view>
                  <view style='margin-top:20px;'>
                    <text class='price_old'>￥170</text>
                    <text class='price_new'>￥140</text>
                  </view>
              </view>
              <view class='room_right'>
                <navigator url='../hotelCommit/hotelCommit'><button>预定</button></navigator>
              </view>
            </view>
          </view>
        </view>
        <view style='border-bottom: 1px solid rgb(216, 216, 216)'></view> 
      </view>
      <view>
        <view class='room'>
          <view>
            <view>
              <text class='room_title'>优惠特价房</text>
            </view>
            <view>
              <view class='room_left'>
                    <view>
                        <text class='room_kind' decode="{{true}}">双床&nbsp;|&nbsp;无窗&nbsp;|&nbsp;不含早餐    
                        </text>
                    </view>
                  <view style='margin-top:20px;'>
                    <text class='price_old'>￥170</text>
                    <text class='price_new'>￥140</text>
                  </view>
              </view>
              <view class='room_right'>
                <navigator url='../hotelCommit/hotelCommit'><button>预定</button></navigator>
              </view>
            </view>
          </view>
        </view>
        <view style='border-bottom: 1px solid rgb(216, 216, 216)'></view> 
      </view>
    </view>
</view>

 <!-- 弹出层的效果    -->
<view class="modal-box"  hidden='{{flag}}'>
   <view class='modal-body'>
     <view class='hotelEvluate'>
      <view class='evluate_content'>
        <text class='evulateNum'>评价（{{evulateNum}}）</text>
        <image src='https://www.holyhire.cn/ky/img/icon/phoneLogin.png' class='close' bindtap='modalclose'></image>
      </view>
      <view class='evluate' wx:for="{{reviewList}}" wx:key="nvzbv" wx:for-item="item">
        <view class='evluate_left'>
            <view class='evluate_pic'>
              <image src="http://img06.tooopen.com/images/20160818/tooopen_sy_175833047715.jpg"></image>
            </view>
        </view>
        <view class='evluate_right'>
            <view class='evl_left'>{{item.username}}</view>
            <view class='evl_right'>2018-03-10</view>
        </view>
        <view class='evl_detail'>
            <text>{{item.content}}</text>
        </view>
        <view style='border-bottom: 1px solid rgb(216, 216, 216)'></view> 
      </view>
     </view>
  </view>
</view> 
