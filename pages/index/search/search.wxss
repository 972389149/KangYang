/* pages/index/search/search.wxss */
 .header{
  width: 100%;
  height: 50px;
}
.selectClass{
  line-height: 50px;
  margin-left: 15px;
  margin-right: 6px;
}
.selectHotel{
  line-height: 40px;
  margin-right: 20px;
}
.selectTab{
  padding-bottom: 2px;
  color: rgb(248,181,81);
  border-bottom:2px solid  rgb(248,181,81);
}
 .searchs{
  width: 90%;
  margin: 0 auto;
  height: 40px;
  background: #fff;
  position: relative;
  top: 15px;
  border-radius: 10px 10px;
  font-size: 16px;
  padding-left: 20px;
} 
.searchs input{
  display: inline-block;
  font-size: 16px;
  padding-left: 0px;
  height: 40px;
}
.searchs image{
  display: inline-block;
  height: 25px;
  width: 25px;
  position: absolute;
  right: 20px;
  top: 8px;
}
.hotSearch{
  width: 90%;
  display: inline-block;
  margin-top: 15px;
  margin-bottom: 15px;
  margin-left: 30px;
  color: rgb(67,67,67);
}

.searchWord{
  width: 90%;
  height: 50px;
  margin: 0 auto;
}
.searchExp{
  float: left;
  width: 33.3%;
  height: 50px;
}
.searchExp button{
  width: 90%;
  height: 35px;
  margin: 0 auto;
  line-height: 35px;
  font-size: 16px;
  border-radius: 20px 20px;
  background: #ccc;
  color: #fff;
  border: 0px;
}
.searchExp navigator{
  width: 90%;
  height: 35px;
  margin: 0 auto;
  line-height: 35px;
  font-size: 16px;
  border-radius: 20px 20px;
  background: #ccc;
  color: #fff;
  border: 0px;
}